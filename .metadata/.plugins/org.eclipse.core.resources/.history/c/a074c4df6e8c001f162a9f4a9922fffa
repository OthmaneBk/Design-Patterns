package com.esisa.dp.creational.abstract_factory;

import java.awt.FlowLayout;

import javax.swing.BoxLayout;
import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JRadioButton;
import javax.swing.JTextField;
import javax.swing.SwingUtilities;
import javax.swing.UIManager;
import javax.swing.UIManager.LookAndFeelInfo;

public class KnowUses extends JFrame {
	private static final long serialVersionUID = 1L;
	
	private LookAndFeelInfo laf[];
	
	public KnowUses() {
		lookAndFeels();
		userInterface();
		applyLookAndFeel(laf[2].getClassName());
	}
	
	void lookAndFeels() {
		laf = UIManager.getInstalledLookAndFeels();
		for (LookAndFeelInfo look : laf) {
			System.out.println(look.getName() + " : " + look.getClassName());
		}
	}
	
	void userInterface() {
		JPanel p = new JPanel();
		p.setLayout(new BoxLayout(p, BoxLayout.Y_AXIS));
		setContentPane(p);
		
		JPanel p1 = new JPanel(new FlowLayout(FlowLayout.LEFT));
		p1.add(new JLabel("Look And Feel : "));
		p1.add(new JTextField(20));
		p1.add(new JButton("Appliquer"));
		
		p.add(p1);
		
		JPanel p2=new JPanel();
		for (LookAndFeelInfo look : laf) {
			JRadioButton b=new JRadioButton(look.getName());
			p2.add(b);
		}
		
		setDefaultCloseOperation(EXIT_ON_CLOSE);
		pack();
		setLocationRelativeTo(null);
		setVisible(true);
	}
	
	void applyLookAndFeel(String className) {
		try {
			UIManager.setLookAndFeel(className);
		}
		catch (Exception e) {}
		SwingUtilities.updateComponentTreeUI(this);
		
	}
	
	public static void main(String[] args) {
		new KnowUses();
	}
}